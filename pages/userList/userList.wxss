.anit {
  width: 100%;
  height: 70rpx;
  background: red;
  position: absolute;
  color: white;
  font-size: 30rpx;
  line-height: 70rpx;
  top: -70rpx;
  z-index: 11;
  text-align: center;
}

.show {
  top: -70rpx;
  animation: show 2s;
  animation-timing-function: ease;
}

@keyframes show {
  0% {
    top: -70rpx;
  }

  10% {
    top: 0rpx;
  }

  80% {
    top: 0rpx;
  }

  100% {
    top: -70rpx;
  }
}